<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/likeNode"
    android:paddingBottom="8dp"
    android:paddingLeft="12dp"
    android:paddingTop="8dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_namePictrue"
        android:src="@drawable/likepage"/>
    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/iv_namePictrue"
        android:layout_toStartOf="@+id/text_date"
        android:textColor="#1e1e1e"
        android:textSize="18sp"
        tools:text="2019-01-29"/>
    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:textColor="#808080"
        android:textSize="14sp"
        tools:text="2019-01-29" />
    <TextView
        android:id="@+id/text_inf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/text_content"
        android:layout_below="@id/text_content"
        android:layout_marginTop="10dp"
        android:textColor="#808080"
        android:textSize="16sp"
        tools:text="This is a very very long content to test multiple lines display" />
</RelativeLayout>